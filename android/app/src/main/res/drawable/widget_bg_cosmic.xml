<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Derin uzay arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="0.3"
                android:centerY="0.7"
                android:startColor="#0D0221"
                android:endColor="#000000" />
        </shape>
    </item>
    
    <!-- Nebula efekti - mor -->
    <item android:left="10dp" android:top="30dp">
        <shape android:shape="oval">
            <size android:width="100dp" android:height="60dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="80dp"
                android:startColor="#40673AB7"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Nebula efekti - pembe -->
    <item android:right="20dp" android:bottom="40dp">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="50dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#30E040FB"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Yıldız tozu efekti -->
    <item android:left="60dp" android:top="10dp">
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="30dp"
                android:startColor="#2500BCD4"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Dış çerçeve (subtle glow) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
</layer-list>
