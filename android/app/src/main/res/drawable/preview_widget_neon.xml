<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Koyu arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#1A1A2E" />
        </shape>
    </item>
    
    <!-- Neon border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#00F5FF" />
        </shape>
    </item>
    
    <!-- İç glow efekti -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#4000F5FF" />
        </shape>
    </item>
    
    <!-- Merkez içerik -->
    <item android:top="16dp" android:left="16dp" android:right="16dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#2000F5FF" />
        </shape>
    </item>
</layer-list>
