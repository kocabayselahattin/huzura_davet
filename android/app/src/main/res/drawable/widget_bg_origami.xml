<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kağıt arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#FFFBF0" />
        </shape>
    </item>
    
    <!-- Sol üst köşe katlama gölgesi -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="40dp" />
            <gradient
                android:angle="135"
                android:startColor="#15000000"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Sağ alt köşe katlama gölgesi -->
    <item android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="60dp" />
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#15000000"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Zarif çerçeve -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="#E0D5C0" />
        </shape>
    </item>
    
    <!-- İç gölge efekti -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke
                android:width="1dp"
                android:color="#08000000" />
        </shape>
    </item>
</layer-list>
