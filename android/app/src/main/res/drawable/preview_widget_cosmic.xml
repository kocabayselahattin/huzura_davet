<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kozmik arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#0D0221"
                android:centerColor="#190A3D"
                android:endColor="#3D1A78"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Yıldız efekti 1 -->
    <item android:top="10dp" android:left="30dp" android:right="150dp" android:bottom="80dp">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- Yıldız efekti 2 -->
    <item android:top="40dp" android:left="100dp" android:right="50dp" android:bottom="50dp">
        <shape android:shape="oval">
            <solid android:color="#30FFFFFF" />
        </shape>
    </item>
    
    <!-- Merkez içerik -->
    <item android:top="20dp" android:left="20dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>
</layer-list>
