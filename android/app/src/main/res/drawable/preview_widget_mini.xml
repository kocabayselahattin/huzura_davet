<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#FF6B35"
                android:centerColor="#F7931E"
                android:endColor="#FFD700"
                android:angle="0" />
        </shape>
    </item>
    
    <!-- Sol taraf - vakit bilgisi -->
    <item android:left="12dp" android:top="12dp" android:right="120dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- Sağ taraf - geri sayım -->
    <item android:left="120dp" android:top="8dp" android:right="12dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#30000000" />
        </shape>
    </item>
</layer-list>
