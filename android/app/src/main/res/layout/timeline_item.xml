<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timeline Noktası -->
    <View
        android:id="@+id/timeline_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/timeline_dot" />

    <!-- Timeline Çizgisi -->
    <View
        android:id="@+id/timeline_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/timeline_dot"
        android:layout_marginStart="4dp"
        android:background="#40FFFFFF" />

    <!-- Vakit Bilgisi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/timeline_dot"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:background="@drawable/timeline_card"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_vakit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="İmsak"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_imsak_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:30"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Mini Ecir Barı -->
        <ProgressBar
            android:id="@+id/progress_vakit_ecir"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="6dp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/progress_timeline_mini"
            android:background="@drawable/progress_timeline_mini_bg" />

    </LinearLayout>

</RelativeLayout>
