<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_circular"
    android:padding="8dp">

    <!-- Üst Başlık -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_konum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstanbul"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hicri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 Recep 1447"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Merkez Dairesel Kısım -->
    <RelativeLayout
        android:id="@+id/circular_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <!-- Dairesel Progress (ProgressBar ile simüle) -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circular_bg_ring">

            <ProgressBar
                android:id="@+id/progress_circular"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/circular_progress_drawable"
                android:indeterminate="false" />

            <!-- Merkez İçerik -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_progress_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%50"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ecir"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:alpha="0.7" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

    <!-- Alt Kısım: Vakit Bilgisi -->
    <LinearLayout
        android:id="@+id/bottom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Mevcut Vakit Badge -->
        <TextView
            android:id="@+id/tv_mevcut_vakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güneş"
            android:textColor="#FFA726"
            android:textSize="9sp"
            android:textStyle="bold"
            android:background="@drawable/badge_circular"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="4dp" />

        <!-- Sonraki Vakit -->
        <TextView
            android:id="@+id/tv_sonraki_vakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Öğle Vaktine"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:layout_marginBottom="2dp" />

        <!-- Geri Sayım -->
        <TextView
            android:id="@+id/tv_geri_sayim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:30:45"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp" />

        <!-- Alt Ecir Barı -->
        <ProgressBar
            android:id="@+id/progress_bottom_ecir"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/progress_circular_bottom"
            android:background="@drawable/progress_circular_bottom_bg" />

    </LinearLayout>

</RelativeLayout>
