<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_neon"
    android:padding="10dp">

    <!-- Üst Köşe: Mevcut Vakit Badge -->
    <LinearLayout
        android:id="@+id/badge_vakit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/badge_neon"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_mevcut_vakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güneş"
            android:textColor="#00FFFF"
            android:textSize="9sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

    </LinearLayout>

    <!-- Orta: Ana Bilgi -->
    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_sonraki_vakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÖĞLE"
            android:textColor="#FF00FF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.15"
            android:shadowColor="#FF00FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15" />

        <TextView
            android:id="@+id/tv_geri_sayim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="02:30:45"
            android:textColor="#00FFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:shadowColor="#00FFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20" />

    </LinearLayout>

    <!-- Ecir Barı - Neon Glow -->
    <LinearLayout
        android:id="@+id/layout_ecir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_bottom"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚡ VAKİT İLERLEMESİ"
            android:textColor="#FF00FF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="3dp" />

        <ProgressBar
            android:id="@+id/progress_ecir"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/progress_neon_gradient"
            android:background="@drawable/progress_neon_bg" />

    </LinearLayout>

    <!-- Alt: Konum ve Tarih -->
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_konum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstanbul"
            android:textColor="#00FFFF"
            android:textSize="9sp"
            android:alpha="0.8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ◆ "
            android:textColor="#FF00FF"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_hicri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 Recep 1447"
            android:textColor="#00FFFF"
            android:textSize="9sp"
            android:alpha="0.8" />

    </LinearLayout>

</RelativeLayout>
