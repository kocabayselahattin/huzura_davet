<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Konum İzinleri -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Konum özelliği bildirimi -->
    <uses-feature android:name="android.hardware.location" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />
    <uses-feature android:name="android.hardware.location.network" android:required="false" />
    
    <!-- İnternet İzinleri -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Bildirim İzinleri -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    
    <!-- Arka Plan ve Zamanlama İzinleri -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.TURN_SCREEN_ON" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    
    <!-- Pil Optimizasyonu İzinleri -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    
    <!-- Rahatsız Etme Modu -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    
    <!-- Diğer Uygulamaların Üzerinde Gösterim -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <application
        android:label="Huzur Vakti"
        android:name=".HuzurVaktiApplication"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI initializes. After that, this theme continues
                 to determine the Window background behind the Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- Widget 1: Klasik Turuncu (3x2) -->
        <receiver 
            android:name=".widgets.KlasikTuruncuWidget"
            android:exported="true"
            android:label="@string/widget_klasik_turuncu_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_klasik_info" />
        </receiver>
        
        <!-- Widget 2: Mini Sunset (3x1) -->
        <receiver 
            android:name=".widgets.MiniSunsetWidget"
            android:exported="true"
            android:label="@string/widget_mini_sunset_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_mini_info" />
        </receiver>

        <!-- Widget 3: Glassmorphism (4x3) -->
        <receiver 
            android:name=".widgets.GlassmorphismWidget"
            android:exported="true"
            android:label="@string/widget_glassmorphism_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_glassmorphism_info" />
        </receiver>

        <!-- Widget 4: Neon Glow (4x3) -->
        <receiver 
            android:name=".widgets.NeonGlowWidget"
            android:exported="true"
            android:label="@string/widget_neon_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_neon_glow_info" />
        </receiver>

        <!-- Widget 5: Cosmic Galaxy (4x2) -->
        <receiver 
            android:name=".widgets.CosmicWidget"
            android:exported="true"
            android:label="@string/widget_cosmic_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_cosmic_info" />
        </receiver>

        <!-- Widget 6: Timeline (4x5) -->
        <receiver 
            android:name=".widgets.TimelineWidget"
            android:exported="true"
            android:label="@string/widget_timeline_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_timeline_info" />
        </receiver>

        <!-- Widget 8: Zen Minimalist (2x2) -->
        <receiver 
            android:name=".widgets.ZenWidget"
            android:exported="true"
            android:label="@string/widget_zen_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_zen_info" />
        </receiver>

        <!-- Widget 9: Origami Paper (4x2) -->
        <receiver 
            android:name=".widgets.OrigamiWidget"
            android:exported="true"
            android:label="@string/widget_origami_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_origami_info" />
        </receiver>

        <!-- Widget Update Receiver - Arka planda widget'ları günceller -->
        <receiver
            android:name=".widgets.WidgetUpdateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.huzur_vakti.UPDATE_WIDGETS" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <!-- Alarm Receiver - Vakit alarmlarını alır -->
        <receiver
            android:name=".alarm.AlarmReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.huzur_vakti.PRAYER_ALARM" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Alarm Service - Foreground service olarak alarm çalar -->
        <service
            android:name=".alarm.AlarmService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Kilit Ekranı Bildirim Servisi - Kilit ekranında vakit bilgisi gösterir -->
        <service
            android:name=".lockscreen.LockScreenNotificationService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Kilit Ekranı Alarm Activity -->
        <activity
            android:name=".alarm.AlarmLockScreenActivity"
            android:exported="false"
            android:theme="@style/AlarmTheme"
            android:showOnLockScreen="true"
            android:turnScreenOn="true"
            android:showWhenLocked="true"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    <!-- Queries: Allows Flutter to interact with other apps.
         In particular, this is used by the Flutter engine in io.flutter.plugin.text.ProcessTextPlugin. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>
